{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dsprx/core": [
        "packages/core/src"
      ],
      "@dsprx/ui": [
        "packages/ui/src"
      ],
      "@dsprx/plugins/*": [
        "plugins/*/src"
      ]
    }
  }
}