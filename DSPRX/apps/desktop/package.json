{
  "name": "@dsprx/desktop",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "bundle": "tsc -p tsconfig.json && vite build",
    "build": "tsc -p tsconfig.json && vite build",
    "start": "electron .",
    "dist": "pnpm bundle && electron-builder",
    "lint": "echo lint desktop",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-updater": "^6.1.8",
    "electron-builder": "^24.6.0",
    "typescript": "^5.4.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "@types/node": "^20.11.30"
  },
  "build": {
    "appId": "com.dsprx.app",
    "productName": "DSPRX",
    "files": [
      "dist/**"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publisherName": "DSPRX"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network"
    }
  }
}